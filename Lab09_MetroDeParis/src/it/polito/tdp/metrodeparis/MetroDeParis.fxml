               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Seleziona una stazione di Arrivo">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Text>
                  <ComboBox fx:id="comboArrivo" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="35.0" />
                     </HBox.margin>
                  </ComboBox>
                  <Button fx:id="btnReset" mnemonicParsing="false" onAction="#doReset" text="Reset">
                     <HBox.margin>
                        <Insets left="100.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox prefHeight="0.0" prefWidth="767.0" />
            <TextArea fx:id="txtArea" text="&#10;">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="150.0" top="20.0" />
               </VBox.margin>
